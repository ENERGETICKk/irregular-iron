<style>

    .titulo {
    position: relative;
    text-align: center;
    padding: 2.5rem 1rem;
    margin: 3rem auto;
    max-width: 900px;
    border-radius: 1.2rem;
    background: linear-gradient(135deg, #0b0014, #120024 60%, #220040);
    box-shadow: 0 0 25px rgb(255, 238, 3);
    overflow: hidden;
    }

    .titulo::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: conic-gradient(
        from 0deg,
        rgba(255, 0, 255, 0.1),
        rgba(0, 255, 255, 0.2),
        rgba(255, 0, 255, 0.1)
    );
    animation: rotateGlow 8s linear infinite;
    z-index: 0;
    }

    @keyframes rotateGlow {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
    }

    .titulo h2 {
    position: relative;
    z-index: 1;
    font-family: "Rajdhani", sans-serif;
    text-transform: uppercase;
    color: #e0dfff;
    letter-spacing: 3px;
    margin: 0.5rem 0;
    font-weight: 700;
    font-size: 2rem;
    transition: color 0.3s ease, text-shadow 0.3s ease;
    }

    .titulo h2:first-child {
    color: #003cff;
    text-shadow: 0 0 10px #1910d1, 0 0 25px #f6ff00;
    }

    .titulo h2:last-child {
    color: #66ffff;
    text-shadow: 0 0 10px #66ffff, 0 0 25px #00ccff;
    }

    .titulo h2:hover {
    color: #fff;
    text-shadow: 0 0 20px #0442ff, 0 0 40px #00ffff;
    }


    .bloques{
        display: flex;
        justify-content: center;
        background-color: rgba(2, 255, 234, 0.1);
        justify-content: space-around;
        padding: 100px;
        margin-top: 200px;
        margin-bottom: 200px;
        border-radius: 20px;
    }

    .card {
        width: 260px;
        height: 220px;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.06);
        border: 1px solid rgba(0,0,0,0.06);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        padding: 1rem;
        text-align: center;
        transition: transform .18s ease, box-shadow .18s ease;
    }

    .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 14px 30px rgba(0,0,0,0.12);
    }

    .card img {
        width: 84px;
        height: 84px;
        object-fit: contain;
        margin-bottom: 0.8rem;
    }

    .card p {
        margin: 0;
        color: #222;
        font-size: 1.05rem;
        font-weight: 500;
    }


</style>