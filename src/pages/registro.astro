---
import Layout from '../layouts/Layout.astro';
import gato from '../assets/gato.png';
import '../styles/global.css';
import Sample from '../components/sample.astro';
import CardLD from '../components/cardLD.astro';

// Card 1
import coverImage1 from '../assets/cardsAssets/present.png';
import titleImage1 from '../assets/cardsAssets/present.png';
import characterImage1 from '../assets/cardsAssets/present.png';
// Card 2
import coverImage2 from '../assets/cardsAssets/falta.png';
import titleImage2 from '../assets/cardsAssets/falta.png';
import characterImage2 from '../assets/cardsAssets/falta.png';
// Card 3
import coverImage3 from '../assets/cardsAssets/retard.png';
import titleImage3 from '../assets/cardsAssets/retard.png';
import characterImage3 from '../assets/cardsAssets/retard.png';
// Card 4
import coverImage4 from '../assets/cardsAssets/justificada.png';
import titleImage4 from '../assets/cardsAssets/justificada.png'
import characterImage4 from '../assets/cardsAssets/justificada.png'
---

<Layout>
<Sample>
    <div class="container-registro">
        <div class="datos-Alumno">
            <h1 class="nombre">Juan Perez</h1>
            <img class="foto-perfil" src={gato.src} alt="perfil-img">
        </div>
        <div class="cards">
            <div class="presents">
                <h2>Present</h2>
            </div>
            <div class="retards">
                <h2>Retards</h2>
            </div>
            <div class="faltes">
                <h2>Faltes</h2>
            </div>
            <div class="justificades">
                <h2>Justificades</h2>
            </div>
        </div>
        
    </div>
    <div class="test">
        <CardLD coverImage={coverImage1.src} titleImage={titleImage1.src} characterImage={characterImage1.src}/>
        <CardLD coverImage={coverImage2.src} titleImage={titleImage2.src} characterImage={characterImage2.src}/>
        <CardLD coverImage={coverImage3.src} titleImage={titleImage3.src} characterImage={characterImage3.src}/>
        <CardLD coverImage={coverImage4.src} titleImage={titleImage4.src} characterImage={characterImage4.src}/>
    </div>
</Layout>
</Sample>


<style>

    /* fade-in al carregar */
    body {
    opacity: 0;
    transition: opacity 0.5s ease;
    }

    body.loaded {
    opacity: 1;
    }

    .container-registro {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 100px auto;
    padding: 2rem;
    background: rgba(0, 26, 77, 0.5);
    border-radius: 20px;
    box-shadow: 0 0 25px rgba(0, 153, 255, 0.4), 0 0 50px rgba(0, 204, 255, 0.3);
    border: 1px solid rgba(0, 204, 255, 0.4);
    backdrop-filter: blur(10px);
    max-width: 900px;
    }

    /* Nombre del alumno */
    .container-registro h1 {
    color: #00ccff;
    font-family: "Rajdhani", sans-serif;
    text-transform: uppercase;
    text-shadow: 0 0 10px #00ffff, 0 0 25px #3399ff;
    letter-spacing: 2px;
    margin: 20px 0;
    font-weight: 700;
    }

    /* Imagen de perfil con glow */
    .foto-perfil {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    border: 3px solid rgba(0, 204, 255, 0.7);
    box-shadow: 0 0 20px #00e5ff, 0 0 40px #008cff;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .foto-perfil:hover {
    transform: scale(1.1);
    box-shadow: 0 0 30px #00ffff, 0 0 60px #3399ff;
    }

    /* Contenedor de las cards */
    .cards {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 30px;
    }

    /* Cada card individual */
    .cards > div {
    background: rgba(0, 26, 77, 0.4);
    border-radius: 15px;
    padding: 2rem;
    width: 160px;
    text-align: center;
    box-shadow: 0 0 15px rgba(0, 153, 255, 0.3);
    border: 1px solid rgba(0, 204, 255, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
    cursor: default;
    }

    .cards > div:hover {
    transform: translateY(-5px);
    background: rgba(0, 26, 77, 0.6);
    box-shadow: 0 0 25px rgba(0, 204, 255, 0.6), 0 0 50px rgba(0, 255, 255, 0.3);
    }

    /* Texto dentro de las cards */
    .cards h2 {
    margin: 0;
    font-size: 1.3rem;
    color: #00eaff;
    text-transform: uppercase;
    font-family: "Rajdhani", sans-serif;
    letter-spacing: 2px;
    text-shadow: 0 0 10px #00ffff, 0 0 25px #0066ff;
    }

    /* Cards de tipo CardLD (contenedor inferior) */
    .test {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin: 60px auto;
    flex-wrap: wrap;
    background: rgba(0, 26, 77, 0.4);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 0 20px rgba(0, 153, 255, 0.3);
    border: 1px solid rgba(0, 204, 255, 0.3);
    }

    /* Responsive */
    @media (max-width: 768px) {
    .container-registro {
        width: 90%;
        padding: 1rem;
    }

    .cards {
        gap: 1rem;
    }

    .cards > div {
        width: 120px;
        padding: 1.2rem;
    }

    .test {
        flex-direction: column;
    }
    }

</style>

<script>
    // JS para aÃ±adir la clase "loaded" al cargar
    window.addEventListener('DOMContentLoaded', () => {
    document.body.classList.add('loaded');
    });

</script>